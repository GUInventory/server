{
  "name": "guinventory",
  "license": "MIT",
  "scripts": {
    "dev": "ts-node src/index.ts",
    "lint": "eslint '*/**/*.ts' --quiet --fix",
    "generate": "yarn generate:prisma && yarn generate:nexus",
    "generate:prisma": "prisma generate",
    "generate:nexus": "ts-node --transpile-only src/schema",
    "migrate:save": "prisma migrate save --experimental",
    "migrate:up": "prisma migrate up --experimental",
    "migrate:down": "prisma migrate down 1 --experimental",
    "seed": "ts-node ./prisma/seed.ts",
    "test": "jest --detectOpenHandles --forceExit",
    "build": "yarn generate && yarn tsc"
  },
  "dependencies": {
    "@nexus/schema": "^0.17.0",
    "@prisma/cli": "2.11.0",
    "@prisma/client": "2.11.0",
    "apollo-server": "^2.18.2",
    "bcrypt": "^5.0.0",
    "graphql": "^15.4.0",
    "graphql-iso-date": "^3.6.1",
    "graphql-middleware": "^4.0.2",
    "graphql-shield": "^7.3.8",
    "graphql-type-json": "^0.3.2",
    "jsonwebtoken": "^8.5.1",
    "nexus-plugin-prisma": "^0.23.1",
    "ts-node-dev": "^1.0.0",
    "uuid": "^8.3.1"
  },
  "devDependencies": {
    "@types/faker": "^5.1.4",
    "@types/jest": "^26.0.15",
    "@types/pg": "^7.14.6",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "faker": "^5.1.0",
    "graphql-request": "^3.3.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.1",
    "pg": "^8.5.1",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.4",
    "typescript": "^4.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ]
  }
}
